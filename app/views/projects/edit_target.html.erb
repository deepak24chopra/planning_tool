<%= render("sidebar.html.erb") -%>

<%= render("vertical.html.erb") -%>

<div class="page-content-wrap">                
                
                    <div class="row">
                            <div class="panel panel-default">
                                <div class="panel-heading">                                
                                    <h3 class="panel-title">Add Target</h3>           
                                </div>
                                <div class="panel-body">
                                <div class="col-md-6">
                                        <%= form_for(@resp[1], url: {:action => 'update_target', :id => params[:id].to_i}, html: { class: "form-horizontal", :authenticity_token => true}) do |f| -%>
                                        <%= token_tag -%>
                                                <% if @resp[2].to_i < 7 -%>
                                                <div class="form-group">
                                                <label class="col-md-3 col-xs-12 control-label"> Approval:</label>
                                              <div class="col-md-6 col-xs-12">                                            
                                                <div class="input-group">
                                                    <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                                    <%= f.number_field :approval, :placeholder => 'Approval goes here..', class: "form-control" -%>
                                                </div>
                                             </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-md-3 col-xs-12 control-label"> Realization:</label>
                                              <div class="col-md-6 col-xs-12">                                            
                                                <div class="input-group">
                                                    <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                                    <%= f.number_field :realization, :placeholder => 'Realization goes here..', class: "form-control" -%>
                                                </div>
                                             </div>
                                            </div>
                                                <% elsif @resp[2].to_i == 7 -%>
                                                    <div class="form-group">
                                                <label class="col-md-3 col-xs-12 control-label"> Number of recs:</label>
                                              <div class="col-md-6 col-xs-12">                                            
                                                <div class="input-group">
                                                    <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                                    <%= f.number_field :no_recs, :placeholder => 'No of recs goes here..', class: "form-control" -%>
                                                </div>
                                             </div>
                                            </div>

                                            <div class="form-group">
                                                <label class="col-md-3 col-xs-12 control-label"> Productivity:</label>
                                              <div class="col-md-6 col-xs-12">                                            
                                                <div class="input-group">
                                                    <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                                    <%= f.number_field :productivity, :placeholder => 'Productivity goes here..', class: "form-control" -%>
                                                </div>
                                             </div>
                                            </div>
                                            <% elsif @resp[2].to_i == 9
                                                 -%>
                                                  <div class="form-group">
                                                <label class="col-md-3 col-xs-12 control-label"> Funds Raised:</label>
                                              <div class="col-md-6 col-xs-12">                                            
                                                <div class="input-group">
                                                    <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                                    <%= f.number_field :funds_raised, :placeholder => 'Funds Raised goes here..', class: "form-control" -%>
                                                </div>
                                             </div>
                                            </div>
                                                 <% else -%>
                                                <% end -%>
                                                <%= f.submit "Submit Target", :name => 'submit', class: "btn btn-primary" -%>
                                                <%= f.submit "Save as Draft", :name => 'draft', class: "btn btn-primary" -%>
                                        <% end -%>
                                
                                </div>
                            </div>
                        </div>
                    </div>


<%= render("message_box.html.erb") -%>