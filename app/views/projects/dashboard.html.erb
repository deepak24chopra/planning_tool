<%= render("sidebar.html.erb") -%>
            
<%= render("vertical.html.erb") -%>              

                <!-- START BREADCRUMB -->
                <ul class="breadcrumb">
                    <li><a href="#">Home</a></li>                    
                    <li class="active">Dashboard</li>
                </ul>
                <!-- END BREADCRUMB -->                       
                <!-- PAGE CONTENT WRAPPER -->
                <div class="page-content-wrap">
                    
                    <!-- START WIDGETS -->                    
                    <div class="row">
                        
                        <div class="col-md-3">
                            
                            <!-- START WIDGET CLOCK -->
                            <div class="widget widget-info widget-padding-sm">
                                <div class="widget-big-int plugin-clock">00:00</div>                            
                                <div class="widget-subtitle plugin-date">Loading...</div>
                                <div class="widget-controls">                                
                                    <a href="#" class="widget-control-right widget-remove" data-toggle="tooltip" data-placement="left" title="Remove Widget"><span class="fa fa-times"></span></a>
                                </div>                            
                                                            
                            </div>                        
                            <!-- END WIDGET CLOCK -->
                            
                        </div>
                    </div>
                    <!-- END WIDGETS -->                    
                    
                    <div class="row">
                    
            <div class="col-md-6">
                            
                            <!-- START PROJECTS BLOCK -->
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <div class="panel-title-box">
                                        <h3>Projects</h3>
                                        <span>Upcoming Projects</span>
                                    </div>                                    
                                    
                                </div>
                                <div class="panel-body panel-body-table">
                                    
                                    <div class="table-responsive">
                                        <table class="table table-bordered table-striped">
                                            <thead>
                                                <tr>
                                                    <th width="30%">Name</th>
                                                    <th width="10%">Department & Synergy</th>
                                                    <th width="40%">Objective</th>
                                                    <th width="20%">Start Date</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                            <% @resp[1].each do |project| -%>
                                                <tr>
                                                    <td><strong><%= link_to "#{project.name}", :action => 'single_project', :id => project.id -%></strong></td>
                                                    <td><span class="label label-warning"><%= department_name(project.dept).to_s -%> 
                                                    <% if (project.dept > 0) -%><%=" & " + department_name(project.dept2).to_s -%><% end -%></span></td>
                                                    <td><%= project.objective -%></td>
                                                    <td>
                                                        <strong><%= project.start_date.to_s(:long) -%></strong>
                                                    </td>
                                                </tr>
                                                <% end -%>
                                                                                                
                                                
                                            </tbody>
                                        </table>
                                    </div>
                                    
                                </div>
                            </div>
                        </div>
                            <!-- END PROJECTS BLOCK -->
                    </div>
                    
                </div>
                <!-- END PAGE CONTENT WRAPPER -->                                
            </div>            
            <!-- END PAGE CONTENT -->
        </div>
        <!-- END PAGE CONTAINER -->

        <!-- MESSAGE BOX-->
<%= render("message_box.html.erb") -%>