<%= form_for(@resp[1], url: {:controller => 'projects',:action => action_name, :method => method_type, :id => id
    },html: {class: "form-horizontal"}) do |f| -%>

                                    <div class="form-group">
                                        <label class="col-md-3 col-xs-12 control-label"> Name</label>
                                        <div class="col-md-6 col-xs-12">                                            
                                            <div class="input-group">
                                                <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                                <%= f.text_field :name, class: "form-control", placeholder: "Project name goes here.." -%>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-3 col-xs-12 control-label">Chapter</label>
                                        <div class="col-md-6 col-xs-12">              
                                            <%= f.select(:lcid, options_from_collection_for_select(@resp[2], :lcid, :lcname)) -%>
                                        </div>
                                    </div>
                                    <% if id != nil-%>
                                    <%= f.hidden_field :id, value: id -%>
                                    <% end -%>
                                    <div class="form-group">                                        
                                        <label class="col-md-3 col-xs-12 control-label">Department</label>
                                        <div class="col-md-6 col-xs-12">
                                            <div class="input-group">
                                                <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                                <%= f.select(:dept, options_for_select(@resp[3], @resp[1].dept.nil? ? {} : {selected: @resp[1].dept }), class: "form-control select") -%>

                                                
                                            </div> 
                                            <span class="help-block">
                                                    {<% @resp[3].each do |dept| -%>
                                                        <%= dept -%> => <%= department_name(dept) -%>, 
                                                    <% end -%>}
                                                </span>          
                                        </div>
                                    </div>
                                    
                                    <div class="form-group">                                        
                                        <label class="col-md-3 col-xs-12 control-label">Synergy</label>
                                        <div class="col-md-6 col-xs-12">
                                            <div class="input-group">
                                                <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                                <%= f.select(:dept2, options_for_select(@resp[4], @resp[1].dept2.nil? ? {selected: 0} : {selected: @resp[1].dept2 }), class: "form-control select") -%>
                                            </div> 
                                            <span class="help-block">
                                                    {<% @resp[4].each do |dept| -%>
                                                        <%= dept -%> => <%= department_name(dept) -%>, 
                                                    <% end -%>}
                                                </span>           
                                        </div>
                                    </div>


                                    
                                    
                                    <div class="form-group">
                                        <label class="col-md-3 col-xs-12 control-label">Synergy Function</label>
                                        <div class="col-md-6 col-xs-12">                                            
                                            <%= f.text_area :synergy_function, class: "form-control", placeholder: "Synergy" -%>
                          
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-3 col-xs-12 control-label">Objective</label>
                                        <div class="col-md-6 col-xs-12">                                            
                                            <%= f.text_area :objective, class: "form-control", placeholder: "Objective.." -%>

                                            
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-3 col-xs-12 control-label">Key Progress indicators</label>
                                        <div class="col-md-6 col-xs-12">                                            
                                            <%= f.text_area :kpi, class: "form-control", placeholder: "Key Progress indicators", :rows => 5 -%>
                                            
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-3 col-xs-12 control-label">Measure of success</label>
                                        <div class="col-md-6 col-xs-12">                                            
                                            <%= f.text_area :mos, class: "form-control", placeholder: "Measure Of success", :rows => 5 -%>
                                            
                                        </div>
                                    </div>

                                    <div class="form-group">                                        
                                        <label class="col-md-3 col-xs-12 control-label">Start Date</label>
                                        <div class="col-md-6 col-xs-12">
                                            <div class="input-group">
                                                <span class="input-group-addon"><span class="fa fa-calendar"></span></span>
                                                <%= f.date_select(:start_date, order: [:day, :month, :year], min: Date.today, class: "form-control") -%>                                            
                                            </div>
                                            
                                        </div>
                                    </div>

                                    <div class="form-group">                                        
                                        <label class="col-md-3 col-xs-12 control-label">End Date</label>
                                        <div class="col-md-6 col-xs-12">
                                            <div class="input-group">
                                                <span class="input-group-addon"><span class="fa fa-calendar"></span></span>
                                                <%= f.date_select(:end_date, order: [:day, :month, :year], min: Date.today, class: "form-control") -%>                                            
                                            </div>
                                            
                                        </div>
                                    </div>

                                
                                
                                <%= f.submit("Submit Project", class: "btn btn-primary") -%>

<% end -%> 